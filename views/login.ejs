<html>
    <body>
        <form method="POST" action="/login">
            <div>
                <label>Username:</label>
                <input type="text" name="username"/>
            </div>
            <div>
                <label>Password:</label>
                <input type="password" name="password"/>
            </div>
            <button type="submit">Login</button>
        </form>
        <% if (error == true) { %>
            <div>
                Error en login
            </div>
        <% } %>
        
    </body>
</html>